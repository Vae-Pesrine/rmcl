<?xml version="1.0"?>
<launch>

<arg name="meshfile" default="/home/amock/workspaces/ros/mamcl_ws/src/uos_tools/uos_gazebo_worlds/Media/models/avz_neu.dae" />
<arg name="device" default="cpu" />

<node pkg="rmcl" type="pcl2_to_depth" name="pcl2_to_depth" output="screen">
    <remap from="cloud" to="kinect/depth/points" />
    <remap from="info" to="kinect/depth/camera_info" />
    <!-- <rosparam file="$(find rmcl)/config/sensors/Kinect.yaml" /> -->
</node>

<!-- ICP with given pose estimate -->
<node pkg="rmcl" type="depth_corrector_embree" name="depth_corrector" 
    output="screen" if="$(eval arg('device') == 'cpu')">
    <param name="map_file" type="string" value="$(arg meshfile)" />
    <param name="odom_frame" type="string" value="odom_combined" />
    <param name="base_frame" type="string" value="base_footprint" />
    <remap from="depth" to="/pcl2_to_depth/depth"/>
    <remap from="pose" to="/move_base_simple/goal"/>
    <param name="max_distance" type="double" value="0.5" />
</node>
